<!-- distinctArtists.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Distinct Artists</title>
    <style>
        .artist-card {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        .artist-card img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 10px;
        }
        .artist-card a {
            text-decoration: none;
            color: #333;
        }
    </style>
</head>
<body>
    <h1>Distinct Artists from Playlist</h1>
    <div class="artist-list">
        <% distinctArtists.forEach(artist => { %>
            <div class="artist-card">
                <img src="<%= artist.imageUrl %>" alt="<%= artist.name %>">
                <div>
                    <a href="<%= artist.profileUrl %>" target="_blank"><%= artist.name %></a>
                    <p>Stream Count: <%= artist.streamCount %></p>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
