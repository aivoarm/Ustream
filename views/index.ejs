<section class="home">
    <div class="home-title">
        <h3>Spotify's API Website</h3>
        <img class="home-img-spotify" src="/images/spotify-icon.png" alt="Spotify Icon">
    </div>
    <main class="home-both">
        <div class="home-search">
            <form action="/artists/" method="GET">
                <label> Find Artist:
                    <input type="text" name="artistName" placeholder="Find artist..." />
                </label>
                <button type="submit">Search</button>
            </form>
        </div>
        <div class="home-search">
            <form action="/artists/" method="GET">
                <label> Find Track:
                    <input type="text" name="trackName" placeholder="Find track..." />
                </label>
                <button type="submit">Search</button>
            </form>
        </div>
    </main>
</section>